---
import { ProjectService } from "../../lib/services/project.service";

const { user } = Astro.locals as { user?: { email: string } };

let projects: any[] = [];
try {
  projects = await ProjectService.getAllProjects();
} catch (e) {}

const url = new URL(Astro.request.url);
const pathSegments = url.pathname.split("/");
const currentProjectId = pathSegments[2]; // /projects/[id]
const currentProject =
  projects.find((p) => p._id.toString() === currentProjectId) || projects[0];
---

<header
  id="topbar"
  class="sticky top-0 z-30 h-20
         bg-surface-50/85 dark:bg-ink-900/75 backdrop-blur
         border-b border-ink-100/70 dark:border-ink-700/50
         transition-shadow duration-200"
>
  <div class="h-full px-4 sm:px-6 flex items-center justify-between gap-4">
    <!-- Left -->
    <div class="flex items-center gap-3">
      <button
        class="md:hidden p-2 rounded-xl
               text-ink-600 hover:bg-ink-100
               dark:text-ink-300 dark:hover:bg-ink-800
               focus:outline-none focus-visible:ring-2 focus-visible:ring-peach-300/70 focus-visible:ring-offset-2 focus-visible:ring-offset-surface-50 dark:focus-visible:ring-offset-ink-900"
        aria-label="Open sidebar"
        onclick="
          document.getElementById('sidebar')?.classList.remove('-translate-x-full');
          document.getElementById('sidebar-backdrop')?.classList.remove('hidden');
        "
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>

      <!-- Theme Toggle -->
      <button
        id="theme-toggle"
        class="p-2 rounded-xl transition-colors
               text-ink-600 hover:bg-ink-100
               dark:text-ink-300 dark:hover:bg-ink-800
               focus:outline-none focus-visible:ring-2 focus-visible:ring-peach-300/70 focus-visible:ring-offset-2 focus-visible:ring-offset-surface-50 dark:focus-visible:ring-offset-ink-900"
        aria-label="Toggle Dark Mode"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6 dark:hidden"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
          ></path>
        </svg>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6 hidden dark:block"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"
          ></path>
        </svg>
      </button>

      <!-- Project Switcher (Pill) -->
      <div class="relative">
        <button
          id="project-switcher"
          type="button"
          class="hidden sm:flex items-center gap-2 px-3 py-2 rounded-2xl
                 bg-surface-200/70 dark:bg-ink-800/60
                 border border-ink-100/70 dark:border-ink-700/50
                 text-sm font-medium text-ink-800 dark:text-ink-100
                 hover:bg-surface-300/70 dark:hover:bg-ink-800
                 transition-colors
                 focus:outline-none focus-visible:ring-2 focus-visible:ring-peach-300/70 focus-visible:ring-offset-2 focus-visible:ring-offset-surface-50 dark:focus-visible:ring-offset-ink-900"
          aria-haspopup="menu"
          aria-expanded="false"
          onclick="
            const m = document.getElementById('project-menu');
            const open = m?.classList.toggle('hidden') === false;
            this.setAttribute('aria-expanded', String(open));
          "
        >
          <span class="w-2 h-2 rounded-full bg-peach-500"></span>
          <span class="max-w-[14rem] truncate">
            {currentProject ? currentProject.name : "Select Project"}
          </span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-4 h-4 text-ink-500 dark:text-ink-300"
          >
            <path
              fill-rule="evenodd"
              d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
              clip-rule="evenodd"></path>
          </svg>
        </button>

        <div
          id="project-menu"
          class="absolute left-0 top-full mt-2 w-64 hidden z-50
                 rounded-2xl shadow-card
                 bg-surface-50 dark:bg-ink-800
                 border border-ink-100 dark:border-ink-700
                 overflow-hidden"
          role="menu"
        >
          <div
            class="px-3 py-2 text-xs font-semibold uppercase tracking-wider text-ink-500 dark:text-ink-300 border-b border-ink-100/70 dark:border-ink-700/70"
          >
            Your Projects
          </div>

          <div class="max-h-64 overflow-auto py-1">
            {
              projects.length > 0 ? (
                projects.map((p) => (
                  <a
                    href={`/projects/${p._id}`}
                    role="menuitem"
                    class="block px-3 py-2 text-sm
                           text-ink-800 dark:text-ink-100
                           hover:bg-peach-50 dark:hover:bg-ink-700/70
                           transition-colors truncate"
                  >
                    {p.name}
                  </a>
                ))
              ) : (
                <div class="px-3 py-2 text-sm text-ink-500 dark:text-ink-300 italic">
                  No projects found
                </div>
              )
            }
          </div>

          <div class="border-t border-ink-100/70 dark:border-ink-700/70">
            <a
              href="/projects?action=create"
              role="menuitem"
              class="block px-3 py-2 text-sm font-medium
                     text-peach-700 dark:text-peach-300
                     hover:bg-peach-50 dark:hover:bg-ink-700/70
                     transition-colors"
            >
              + Create New Project
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Right -->
    <div class="flex items-center gap-3">
      <div class="relative">
        <button
          id="user-menu-button"
          type="button"
          class="flex items-center gap-3 pl-2 pr-2 py-1.5 rounded-full
                 hover:bg-ink-50 dark:hover:bg-ink-800/70 transition-colors
                 focus:outline-none focus-visible:ring-2 focus-visible:ring-peach-300/70 focus-visible:ring-offset-2 focus-visible:ring-offset-surface-50 dark:focus-visible:ring-offset-ink-900"
          aria-haspopup="menu"
          aria-expanded="false"
          onclick="
            const m = document.getElementById('user-menu');
            const open = m?.classList.toggle('hidden') === false;
            this.setAttribute('aria-expanded', String(open));
          "
        >
          <span
            class="hidden sm:block text-sm font-medium text-ink-800 dark:text-ink-100 max-w-[16rem] truncate"
          >
            {user?.email || "User"}
          </span>

          <div
            class="w-9 h-9 rounded-full
                      bg-gradient-to-tr from-peach-400 to-peach-200
                      ring-1 ring-ink-100 dark:ring-ink-700"
          >
          </div>
        </button>

        <div
          id="user-menu"
          class="absolute right-0 top-full mt-2 w-56 hidden z-50
                 rounded-2xl shadow-card
                 bg-surface-50 dark:bg-ink-800
                 border border-ink-100 dark:border-ink-700
                 overflow-hidden"
          role="menu"
        >
          <div
            class="px-4 py-3 border-b border-ink-100/70 dark:border-ink-700/70"
          >
            <p
              class="text-xs font-semibold uppercase tracking-wider text-ink-500 dark:text-ink-300"
            >
              Signed in as
            </p>
            <p
              class="text-sm font-semibold text-ink-900 dark:text-ink-100 truncate"
            >
              {user?.email}
            </p>
          </div>

          <form action="/api/auth/logout" method="POST" class="p-1">
            <button
              type="submit"
              class="w-full text-left px-3 py-2 rounded-xl text-sm
                     text-red-600 dark:text-red-400
                     hover:bg-red-50 dark:hover:bg-ink-700/70
                     transition-colors
                     focus:outline-none focus-visible:ring-2 focus-visible:ring-peach-300/70"
            >
              Sign out
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Minimal JS: close menus on outside click / ESC -->
  <script is:inline>
    const closeMenus = () => {
      const pm = document.getElementById("project-menu");
      const pb = document.getElementById("project-switcher");
      const um = document.getElementById("user-menu");
      const ub = document.getElementById("user-menu-button");
      if (pm && !pm.classList.contains("hidden")) pm.classList.add("hidden");
      if (um && !um.classList.contains("hidden")) um.classList.add("hidden");
      pb?.setAttribute("aria-expanded", "false");
      ub?.setAttribute("aria-expanded", "false");
    };

    document.addEventListener("click", (e) => {
      const t = e.target;
      const withinProject =
        document.getElementById("project-switcher")?.contains(t) ||
        document.getElementById("project-menu")?.contains(t);
      const withinUser =
        document.getElementById("user-menu-button")?.contains(t) ||
        document.getElementById("user-menu")?.contains(t);

      if (!withinProject && !withinUser) closeMenus();
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") closeMenus();
    });

    // Optional: add shadow on scroll (subtle)
    const topbar = document.getElementById("topbar");
    const onScroll = () => {
      if (!topbar) return;
      if (window.scrollY > 2) topbar.classList.add("shadow-sm");
      else topbar.classList.remove("shadow-sm");
    };
    window.addEventListener("scroll", onScroll, { passive: true });
    onScroll();
  </script>
</header>
