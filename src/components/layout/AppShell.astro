---
import Sidebar from "./Sidebar.astro";
import Topbar from "./Topbar.astro";

interface Props {
  user?: any;
}

const { user } = Astro.props;
---

<div class="min-h-screen bg-surface-100/50 flex flex-col md:flex-row">
  <Sidebar />

  <div
    class="flex-1 flex flex-col md:ml-64 min-w-0 transition-all duration-300"
  >
    <Topbar user={user} />

    <main
      class="flex-1 p-6 md:p-8 max-w-7xl mx-auto w-full animate-in fade-in duration-500"
    >
      <slot />
    </main>
  </div>
</div>
