---
interface Props {
  variant?: "primary" | "secondary" | "ghost";
  type?: "button" | "submit" | "reset";
  class?: string;
  id?: string;
}

const {
  variant = "primary",
  type = "button",
  class: className,
  id,
} = Astro.props;

const variants = {
  primary:
    "bg-peach-500 text-white hover:bg-peach-600 shadow-md transform active:scale-95",
  secondary:
    "bg-white text-ink-900 border border-ink-100 hover:bg-ink-100 shadow-sm",
  ghost: "bg-transparent text-ink-500 hover:text-ink-900 hover:bg-ink-50",
};
---

<button
  id={id}
  type={type}
  class:list={[
    "px-6 py-3 rounded-2xl font-medium transition-all duration-200 flex items-center justify-center gap-2",
    variants[variant],
    className,
  ]}
>
  <slot />
</button>
